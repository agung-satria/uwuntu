#!/bin/sh
# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(printf "ï€£ lock\nï¡‚ leave dwm\nï¥’ renew dwm\nğŸ» hibernate\nğŸ”ƒ reboot\nï€‘ shutdown\nâ¾ sleep\nğŸ“º display off" | dmenu -i -p 'Action: ')" in
	'ğŸ”’ lock') slock ;;
	'ğŸšª leave dwm') kill -TERM "$(pgrep -u "$USER" "\bdwm$")" ;;
	'â™»ï¸ renew dwm') kill -HUP "$(pgrep -u "$USER" "\bdwm$")" ;;
	'ğŸ» hibernate') slock $ctl hibernate ;;
	'ğŸ’¤ sleep') $ctl suspend && slock ;;
	'ğŸ”ƒ reboot') $ctl reboot -i ;;
	'ğŸ–¥ï¸shutdown') $ctl poweroff -i ;;
	'ğŸ“º display off') xset dpms force off ;;
	*) exit 1 ;;
esac
