#!/bin/bash
# icons depend on nerdfonts being installed
clock=$(date '+%I')

case "$clock" in
	    "00") icon="î" ;;
	    "01") icon="î‚" ;;
   		"02") icon="îƒ" ;;
   		"03") icon="î„" ;;
   		"04") icon="î…" ;;
	    "05") icon="î†" ;;
	    "06") icon="î‡" ;;
	    "07") icon="îˆ" ;;
	    "08") icon="î‰" ;;
	    "09") icon="îŠ" ;;
	    "10") icon="î‹" ;;
	    "11") icon="îŒ" ;;
  		"12") icon="î" ;;

	   #  "00") icon="ğŸ•›" ;;
	   #  "01") icon="ğŸ•" ;;
   	# 	"02") icon="ğŸ•‘" ;;
   	# 	"03") icon="ğŸ•’" ;;
   	# 	"04") icon="ğŸ•“" ;;
	   #  "05") icon="ğŸ•”" ;;
	   #  "06") icon="ğŸ••" ;;
	   #  "07") icon="ğŸ•–" ;;
	   #  "08") icon="ğŸ•—" ;;
	   #  "09") icon="ğŸ•˜" ;;
	   #  "10") icon="ğŸ•™" ;;
	   #  "11") icon="ğŸ•š" ;;
  		# "12") icon="ğŸ•›" ;;
esac

case $BLOCK_BUTTON in
	1) notify-send "This Month" "$(cal --color=always | sed "s/..7m/<b><span color=\"red\">/;s/..27m/<\/span><\/b>/")" && notify-send "Appointments" "$(calcurse -d3)" ;;
	2) notify-send "ğŸ“… Time/date module" "\- Left click to show upcoming appointments for the next three days via \`calcurse -d3\` and show the month via \`cal\`
- Right click opens calcurse if installed" ;;
	# 3) setsid -f "$TERMINAL" -e calcurse ;;
	3) st -c float-st-calcurse -g 100x25+350+200 calcurse ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

echo "ï‰´$(date "+%b-%d-%Y $icon%I:%M%p")"

